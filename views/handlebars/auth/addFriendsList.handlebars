
<h3>Friends</h3>

<div class='pt-auth-container'>

  {{#if this}} 

    <form id='pt-friends-form'>

      <ul>
        {{#each this}}

          <li data-id='{{user._id}}'>

            <div>
              {{user.name}}
            </div>
            
            <ul class="list-inline">
              <li>
                <input type='submit' data-action='remove', data-role='request', data-name='{{user.name}}', data-id='{{user._id}}', class='btn btn-custom friends-list-btn', value='Remove'>
              </li>
            </ul>

          </li>
          <br/>

        {{/each}}
      </ul>
      
    </form>

  {{else}}
    <span>None</span>
  {{/if}}

</div>
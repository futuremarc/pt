<ul data-id='{{data._id}}'  data-name='{{data.name}}' data-is-me='{{isMe}}'>

  <li class='pt-chat pt-menu-item' >
    <div data-role='chat', data-id='{{data._id}}'>Chat</div>
  </li>

	{{#if isMe}}
		  <li class='pt-menu-home pt-menu-item'>

		    <div data-role='home', data-id='{{data._id}}'>Friend requests</div>
        {{#ifCond data.friendRequests.length '>' 0}}
          <span class='pt-notification-counter' style='display:block'>{{data.friendRequests.length}}</span>
        {{else}}
           <span class='pt-notification-counter'>{{data.friendRequests.length}}</span>
        {{/ifCond}}
		  </li>
	 {{/if}}

 	{{#if isMe}}
  		<li class='pt-menu-friend pt-menu-item' >
    		<div data-role='friend', data-id='{{data._id}}'>Find your friends</div>
  		</li>
  {{/if}}


